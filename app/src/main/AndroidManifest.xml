<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- GPS & Internet Permissions -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.GMDApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GMD"
        android:usesCleartextTraffic="true"
        tools:targetApi="33">

        <!-- Google Map API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- 카카오 로그인 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="kakao0a2c945c82b638fdb08b2eccf8a0a87e" />

        <activity
            android:name=".presentation.splash.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.main.activity.MainActivity">
        </activity>
        <activity
            android:name=".presentation.ui.create_song.activity.CreateSongActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity android:name=".presentation.ui.sign_up.SignUpActivity">
        </activity>
    </application>
</manifest>