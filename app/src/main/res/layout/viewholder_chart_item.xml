    <TextView
        android:id="@+id/txt_chart_music_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_to_8dp"
        android:ellipsize="end"
        android:fontFamily="@font/noto_sans_bold"
        android:maxLines="1"
        android:text="@string/txt_music_title"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_to_14sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_chart_liked_count"
        app:layout_constraintStart_toEndOf="@+id/cv_chart_music_album"
        app:layout_constraintTop_toTopOf="@+id/cv_chart_music_album" />

    <TextView
        android:id="@+id/txt_chart_music_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_to_4dp"
        android:fontFamily="@font/noto_sans_regular"
        android:text="@string/txt_artist_and_album"
        android:textSize="@dimen/txt_size_to_12sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/txt_chart_music_title"
        app:layout_constraintStart_toStartOf="@+id/txt_chart_music_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_chart_music_title" />

    <TextView
        android:id="@+id/txt_chart_liked_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:fontFamily="@font/noto_sans_regular"
        android:text="@string/txt_liked_count"
        android:textSize="@dimen/txt_size_to_14sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>