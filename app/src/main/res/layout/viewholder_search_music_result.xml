<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--  Album Image  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cd_result_album_art"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_result_album_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_music_basic" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_result_music_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_select_music"
        app:layout_constraintStart_toEndOf="@+id/cd_result_album_art"
        app:layout_constraintTop_toTopOf="@+id/cd_result_album_art" />

    <TextView
        android:id="@+id/txt_search_music_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="@color/text_01"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_select_music"
        app:layout_constraintStart_toStartOf="@+id/txt_result_music_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_result_music_title" />

    <ImageButton
        android:id="@+id/btn_select_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:contentDescription="선택"
        android:padding="16dp"
        android:src="@drawable/ic_check_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>