<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_page_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/ic_page_two"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_page_num"
        android:layout_below="@id/img_page_num"
        android:layout_marginTop="12dp"
        android:text="사연 입력하기"
        android:textColor="@color/black"
        android:textSize="24sp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_story_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_page_num"
        android:layout_below="@id/txt_story"
        android:layout_marginTop="16dp"
        android:text="사연을 통해서\n노래와 관련된 당신의 이야기를 들려주세요."
        android:textSize="16sp" />

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/edt_story"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:background="@drawable/borderline_write_story"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/txt_story_guide"
          android:layout_marginVertical="24dp"
          android:layout_marginHorizontal="32dp"
          android:gravity="top"
          android:maxLength="500"
          android:imeOptions="actionNext"
          android:inputType="text"
          android:hint="140자 까지 입력 가능합니다."
          android:paddingStart="12dp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_page_num"
        android:layout_below="@id/edt_story"
        android:layout_marginTop="8dp"
        android:text="(선택) 태그 입력하기"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_hashtag_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_page_num"
        android:layout_below="@id/txt_hashtag"
        android:layout_marginTop="16dp"
        android:text="해시태그를 통해 곡의 분의기를 표현해보세요."
        android:textSize="16sp" />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edt_hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_hashtag_guide"
        android:layout_marginVertical="32dp"
        android:layout_marginHorizontal="48dp"
        android:maxLength="200"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:hint="태그는 최대 3개 까지 입력 가능합니다."
        android:inputType="text"
        android:textSize="14sp"
        android:paddingStart="12dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_finish_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_hashtag"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_btn_gray"
        android:text="음악 추가하기" />
  </RelativeLayout>
</ScrollView>