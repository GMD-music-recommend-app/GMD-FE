<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_page_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_to_32dp"
        android:layout_marginStart="@dimen/margin_to_32dp"
        android:src="@drawable/ic_page_two"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_page_num"
        android:layout_below="@id/img_page_num"
        android:layout_marginTop="@dimen/margin_to_12dp"
        android:text="@string/txt_title_write_story"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_to_24sp" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_story_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_page_num"
        android:layout_below="@id/txt_story"
        android:layout_marginTop="@dimen/margin_to_16dp"
        android:text="@string/txt_guide_write_story"
        android:textSize="@dimen/txt_size_to_16sp" />

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/edt_story"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:background="@drawable/borderline_write_story"
          android:layout_centerHorizontal="true"
          android:layout_below="@id/txt_story_guide"
          android:layout_marginVertical="@dimen/margin_to_24dp"
          android:layout_marginHorizontal="@dimen/margin_to_32dp"
          android:gravity="top"
          android:maxLength="500"
          android:imeOptions="actionNext"
          android:inputType="textMultiLine"
          android:scrollHorizontally="false"
          android:hint="@string/hint_story_maximum_length"
          android:paddingStart="@dimen/padding_to_12dp"
          tools:ignore="RtlSymmetry" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_hashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_page_num"
        android:layout_below="@id/edt_story"
        android:layout_marginTop="@dimen/margin_to_8dp"
        android:text="@string/txt_title_write_hashtag"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_to_24sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_hashtag_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_page_num"
        android:layout_below="@id/txt_hashtag"
        android:layout_marginTop="@dimen/margin_to_16dp"
        android:text="@string/txt_guide_write_hashtag"
        android:textSize="@dimen/txt_size_to_16sp" />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edt_hashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt_hashtag_guide"
        android:layout_marginVertical="@dimen/margin_to_32dp"
        android:layout_marginHorizontal="@dimen/margin_to_48dp"
        android:maxLength="200"
        android:maxLines="1"
        android:imeOptions="actionDone"
        android:hint="@string/hint_hashtag_maximum_count"
        android:inputType="text"
        android:textSize="@dimen/txt_size_to_14sp"
        android:paddingStart="@dimen/padding_to_12dp"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_finish_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_hashtag"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/margin_to_32dp"
        android:layout_marginBottom="@dimen/margin_to_32dp"
        android:background="@drawable/bg_btn_gray"
        android:text="@string/txt_finish_to_create_music" />
  </RelativeLayout>
</ScrollView>