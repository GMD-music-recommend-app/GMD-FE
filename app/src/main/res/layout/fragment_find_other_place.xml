<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_to_16dp"
        android:layout_marginHorizontal="@dimen/margin_to_8dp">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/autocomplete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment" />
    </androidx.cardview.widget.CardView>

    <!--  Google Map Container  -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/subMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_to_32dp"
        android:padding="@dimen/padding_to_12dp"
        android:elevation="@dimen/elevation_to_24dp"
        android:text="@string/txt_title_create_pin_here"
        android:visibility="gone"
        style="@style/ActiveButtonStyle"
        tools:visibility="visible"/>
</RelativeLayout>