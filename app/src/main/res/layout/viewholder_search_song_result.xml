<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--  Album Image  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/container_search_music_album_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginVertical="@dimen/margin_to_8dp"
        android:layout_marginHorizontal="@dimen/margin_to_12dp"
        app:cardCornerRadius="5dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_search_music_album_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_sample_image"/>
    </androidx.cardview.widget.CardView>

    <!--  Song Title  -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_search_music_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/container_search_music_album_image"
        android:layout_toEndOf="@+id/container_search_music_album_image"
        android:layout_toStartOf="@+id/btn_select_song"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/txt_music_title"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_to_14sp" />

    <!--  Song Artist & Album Title  -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_search_music_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_search_music_title"
        android:layout_alignStart="@+id/txt_search_music_title"
        android:layout_toStartOf="@+id/btn_select_song"
        android:layout_marginTop="@dimen/margin_to_4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/txt_artist_and_album"
        android:textSize="@dimen/txt_size_to_12sp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_select_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_to_8dp"
        android:layout_marginEnd="@dimen/margin_to_16dp"
        android:background="@color/transparent"
        android:contentDescription="@string/txt_select"
        android:src="@drawable/ic_btn_check" />
    </RelativeLayout>