<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <ProgressBar
     android:id="@+id/progressBar"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:visibility="gone"/>

 <androidx.appcompat.widget.AppCompatImageView
     android:id="@+id/img_page_num"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_alignParentStart="true"
     android:layout_marginTop="@dimen/margin_to_32dp"
     android:layout_marginStart="@dimen/margin_to_32dp"
     android:src="@drawable/ic_page_one" />
 <androidx.appcompat.widget.AppCompatTextView
     android:id="@+id/txt_story"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/img_page_num"
     android:layout_alignStart="@+id/img_page_num"
     android:layout_marginTop="@dimen/margin_to_12dp"
     android:text="@string/txt_title_search_music"
     android:textColor="@color/black"
     android:textSize="@dimen/txt_size_to_24sp" />
 <androidx.appcompat.widget.AppCompatTextView
     android:id="@+id/txt_guide_song"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/txt_story"
     android:layout_alignStart="@+id/txt_story"
     android:layout_marginTop="@dimen/margin_to_16dp"
     android:text="@string/txt_guide_search_music"
     android:textSize="@dimen/txt_size_to_16sp" />

 <com.google.android.material.textfield.TextInputLayout
     android:id="@+id/txtField_search_song"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/txt_guide_song"
     android:layout_centerHorizontal="true"
     android:layout_marginHorizontal="@dimen/margin_to_32dp"
     android:layout_marginTop="@dimen/margin_to_36dp"
     app:startIconDrawable="@drawable/ic_search"
     app:startIconCheckable="true"
     app:hintEnabled="false">
  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/edt_search_song"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:backgroundTint="@android:color/transparent"
      android:hint="@string/hint_search_music"
      android:imeOptions="actionSearch"
      android:inputType="text"
      android:maxLines="1"
      android:maxLength="200"
      android:paddingStart="@dimen/padding_to_12dp"
      tools:ignore="RtlSymmetry" />
 </com.google.android.material.textfield.TextInputLayout>


 <androidx.recyclerview.widget.RecyclerView
     android:id="@+id/rv_result"
     android:layout_width="match_parent"
     android:layout_height="360dp"
     android:layout_centerHorizontal="true"
     android:layout_below="@id/txtField_search_song"
     android:layout_marginTop="@dimen/margin_to_16dp"
     android:layout_marginHorizontal="@dimen/margin_to_32dp"
     android:splitMotionEvents="false"
     app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

 <androidx.appcompat.widget.AppCompatTextView
     android:id="@+id/txt_empty_result"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:text="@string/txt_guide_no_result_music"
     android:textSize="@dimen/txt_size_to_24sp"
     android:visibility="gone"/>
</RelativeLayout>
