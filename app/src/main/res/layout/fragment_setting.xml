<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borderline_toolbar"
        app:titleCentered="true"
        app:title="설정하기"/>

    <RelativeLayout
        android:id="@+id/settingsLogin"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="1dp"
        android:paddingLeft="30dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/setting_login"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="로그인해주세요"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/setting_login_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_round_chevron_right_24" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_below="@id/settingsLogin"
        />
    <RelativeLayout
        android:id="@+id/settingsCategory"
        android:layout_below="@+id/settingsLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/interest_location"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground">
            <TextView
                android:id="@+id/interest_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="관심지역 변경"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/interest_location_icon"
                android:layout_below="@+id/interest_location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_location_on_24"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="140dp"
            android:background="@color/gray"
            android:layout_toRightOf="@id/interest_location"
            />
        <RelativeLayout
            android:id="@+id/recommend_music"
            android:layout_toRightOf="@+id/interest_location"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground">>
            <TextView
                android:id="@+id/recommend_music_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="내가 추가한 음악"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/recommend_music_icon"
                android:layout_below="@+id/recommend_music_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_location_on_24"/>
        </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="140dp"
            android:background="@color/gray"
            android:layout_toRightOf="@id/recommend_music"
            />
        <RelativeLayout
            android:id="@+id/manage_comments"
            android:layout_width="137dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/recommend_music"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/manage_comments_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="내 댓글 관리"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/manage_comments_text_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manage_comments_text"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_baseline_location_on_24" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_below="@id/settingsCategory"
        />
    <RelativeLayout
        android:id="@+id/settingsPush"
        android:layout_below="@+id/settingsCategory"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        >
        <TextView
            android:id="@+id/push_title"
            android:layout_width="59dp"
            android:layout_height="28dp"
            android:text="사용자 알림"
            android:textSize="12dp"
            android:textColor="@color/gray"
            />
        <TextView
            android:id="@+id/push_intro"
            android:layout_below="@+id/push_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관심지역 음악 추천 알림"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
        <Switch
            android:id="@+id/push_switch"
            android:layout_toRightOf="@+id/push_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="28dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="1dp"
        android:background="@color/gray"
        android:layout_below="@+id/settingsPush"
        />
    <RelativeLayout
        android:id="@+id/settingsCustomerService"
        android:layout_below="@+id/settingsPush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/coustomer_service_title"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:textSize="12dp"
            android:text="고객센터"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            />
        <RelativeLayout
            android:id="@+id/customer_service"
            android:layout_below="@+id/coustomer_service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:id="@+id/notice_container"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                >
                <TextView
                    android:id="@+id/notice_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공지사항"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/notice_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_round_chevron_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_guide_container"
                android:layout_below="@+id/notice_container"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                >
                <TextView
                    android:id="@+id/user_guide_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="앱 사용 설명서"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/user_guide_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_round_chevron_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/politic_container"
                android:layout_below="@+id/user_guide_container"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                >
                <TextView
                    android:id="@+id/politic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약관 및 정책"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_round_chevron_right_24"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/current_version_container"
                android:layout_below="@+id/politic_container"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                >
                <TextView
                    android:id="@+id/current_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 버전"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_toRightOf="@+id/current_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v 1.0.0"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>