<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:background="@drawable/ic_back" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="위치 선택하기"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_guide_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_story"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="공유할 위치를 선택해주세요."
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_guide_story"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="64dp"
        android:padding="16dp"
        android:backgroundTint="@color/main_color"
        android:elevation="4dp"
        android:text="여기에 추가하기"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="10dp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_create_other_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_create_here"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="64dp"
        android:padding="16dp"
        android:backgroundTint="@color/main_color"
        android:elevation="4dp"
        android:text="다른 위치에 추가하기"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        app:cornerRadius="10dp" />

</RelativeLayout>