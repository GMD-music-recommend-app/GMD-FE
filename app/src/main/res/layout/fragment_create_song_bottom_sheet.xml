<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_to_24dp"
        android:background="@drawable/ic_close" />

    <TextView
        android:id="@+id/txt_story"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_to_24dp"
        android:layout_marginTop="@dimen/margin_to_16dp"
        android:layout_toStartOf="@+id/btn_close"
        android:text="@string/txt_title_select_location"
        android:textColor="@color/main_color"
        android:textSize="@dimen/txt_size_to_18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_guide_story"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_story"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_to_24dp"
        android:layout_toStartOf="@+id/btn_close"
        android:fontFamily="@font/noto_sans_regular"
        android:text="@string/txt_guide_select_location"
        android:textSize="@dimen/txt_size_to_14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_here"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_guide_story"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_to_16dp"
        android:layout_marginHorizontal="@dimen/margin_to_64dp"
        android:background="@drawable/bg_btn_main_color_rectangle"
        android:padding="@dimen/padding_to_16dp"
        android:elevation="@dimen/elevation_to_4dp"
        android:text="@string/txt_title_create_pin_current_location"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_to_16sp"
        app:cornerRadius="@dimen/radius_to_10dp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_other_place"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_create_here"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/margin_to_16dp"
        android:layout_marginHorizontal="@dimen/margin_to_64dp"
        android:background="@drawable/bg_btn_white_rectangle"
        android:padding="@dimen/padding_to_16dp"
        android:elevation="@dimen/elevation_to_4dp"
        android:text="@string/txt_title_create_pin_other_place"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        android:textSize="@dimen/txt_size_to_16sp"
        app:cornerRadius="@dimen/radius_to_10dp" />
</RelativeLayout>