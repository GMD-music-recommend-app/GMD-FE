<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_create_song"
    app:startDestination="@id/otherSpotSelectionFragment">

    <fragment
        android:id="@+id/otherSpotSelectionFragment"
        android:name="com.sesac.gmd.presentation.ui.music_recommend.location_select.OtherLocationSelectionFragment"
        android:label="다른 장소 선택하기" >
        <action
            android:id="@+id/go_to_music_search"
            app:destination="@id/musicSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/musicSearchFragment"
        android:name="com.sesac.gmd.presentation.ui.music_recommend.music_search.MusicSearchFragment"
        android:label="음악 검색하기" >
        <action
            android:id="@+id/go_to_story_input"
            app:destination="@id/storyInputFragment" />
        <action
            android:id="@+id/back_to_location_selection"
            app:destination="@id/otherSpotSelectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/storyInputFragment"
        android:name="com.sesac.gmd.presentation.ui.music_recommend.story_input.StoryInputFragment"
        android:label="사연 입력하기" >
        <action
            android:id="@+id/back_to_music_search"
            app:destination="@id/musicSearchFragment" />
    </fragment>
</navigation>